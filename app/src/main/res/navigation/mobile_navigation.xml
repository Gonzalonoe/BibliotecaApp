<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_inicio">

    <!-- ======================================================= -->
    <!--                    FRAGMENTOS                          -->
    <!-- ======================================================= -->

    <fragment
        android:id="@+id/nav_inicio"
        android:name="com.example.bibliotecaapp.ui.inicio.InicioFragment"
        android:label="Ubicaci칩n Biblioteca"
        tools:layout="@layout/fragment_inicio" />

    <!-- LIBROS -->
    <fragment
        android:id="@+id/nav_libros"
        android:name="com.example.bibliotecaapp.ui.libros.LibrosFragment"
        android:label="Libros"
        tools:layout="@layout/fragment_libros">

        <action
            android:id="@+id/action_nav_libros_to_detallesLibroFragment"
            app:destination="@id/detallesLibroFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_nav_libros_to_nav_cargar_libro"
            app:destination="@id/nav_cargar_libro"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />

        <action
            android:id="@+id/action_nav_libros_to_busquedaAvanzadaFragment"
            app:destination="@id/busquedaAvanzadaFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <!-- LOGOUT -->
    <fragment
        android:id="@+id/nav_logout"
        android:name="com.example.bibliotecaapp.ui.logout.LogoutFragment"
        android:label="Cerrar Sesi칩n"
        tools:layout="@layout/fragment_logout" />

    <!-- DETALLE LIBRO -->
    <fragment
        android:id="@+id/detallesLibroFragment"
        android:name="com.example.bibliotecaapp.ui.libros.DetalleLibroFragment"
        android:label="Detalles del Libro"
        tools:layout="@layout/fragment_detalle_libro" />

    <!-- CARGAR LIBRO -->
    <fragment
        android:id="@+id/nav_cargar_libro"
        android:name="com.example.bibliotecaapp.ui.libros.CargarLibrosFragment"
        android:label="Cargar Libro"
        tools:layout="@layout/fragment_cargar_libros" />

    <!-- BUSQUEDA AVANZADA -->
    <fragment
        android:id="@+id/busquedaAvanzadaFragment"
        android:name="com.example.bibliotecaapp.ui.libros.BusquedaAvanzadaFragment"
        android:label="B칰squeda Avanzada"
        tools:layout="@layout/fragment_busqueda_avanzada">

        <action
            android:id="@+id/action_busquedaAvanzadaFragment_to_detallesLibroFragment"
            app:destination="@id/detallesLibroFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <!-- REPORTES -->
    <fragment
        android:id="@+id/nav_reportes"
        android:name="com.example.bibliotecaapp.ui.reportes.ReportesFragment"
        android:label="Reportes"
        tools:layout="@layout/fragment_reportes">

        <action
            android:id="@+id/action_reportesFragment_to_listaReportesFragment"
            app:destination="@id/listaReportesFragment" />

        <action
            android:id="@+id/action_nav_reportes_to_detalleReporteFragment"
            app:destination="@id/detalleReporteFragment" />
    </fragment>

    <!-- LISTA REPORTES -->
    <fragment
        android:id="@+id/listaReportesFragment"
        android:name="com.example.bibliotecaapp.ui.reportes.ListaReportesFragment"
        android:label="Lista Reportes"
        tools:layout="@layout/fragment_lista_reportes">

        <action
            android:id="@+id/action_listaReportesFragment_to_detalleReporteFragment"
            app:destination="@id/detalleReporteFragment" />
    </fragment>

    <!-- DETALLE REPORTE -->
    <fragment
        android:id="@+id/detalleReporteFragment"
        android:name="com.example.bibliotecaapp.ui.reportes.DetalleReporteFragment"
        android:label="Detalle Reporte"
        tools:layout="@layout/fragment_detalle_reporte" />

    <!-- PEDIDOS -->
    <fragment
        android:id="@+id/nav_pedidos"
        android:name="com.example.bibliotecaapp.ui.pedidos.PedidosFragment"
        android:label="Mis Pedidos"
        tools:layout="@layout/fragment_pedidos">

        <action
            android:id="@+id/action_nav_pedidos_to_detallePedidoFragment"
            app:destination="@id/detallePedidoFragment" />
    </fragment>

    <!-- DETALLE PEDIDO -->
    <fragment
        android:id="@+id/detallePedidoFragment"
        android:name="com.example.bibliotecaapp.ui.pedidos.DetallePedidoFragment"
        android:label="Detalle Pedido"
        tools:layout="@layout/fragment_detalle_pedido" />

    <!-- ======================================================= -->
    <!--        游댏 RECUPERACI칍N DE CONTRASE칌A (CORREGIDO)        -->
    <!-- ======================================================= -->

    <!-- Paso 1: Ingresar email -->
    <fragment
        android:id="@+id/olvidePasswordFragment"
        android:name="com.example.bibliotecaapp.cambiarpassword.OlvidePasswordFragment"
        android:label="Olvid칠 mi contrase침a"
        tools:layout="@layout/fragment_olvide_password">

        <action
            android:id="@+id/action_olvidePasswordFragment_to_cambiarPasswordFragment"
            app:destination="@id/cambiarPasswordFragment"
            app:enterAnim="@anim/slide_in_right"
            app:exitAnim="@anim/slide_out_left"
            app:popEnterAnim="@anim/slide_in_left"
            app:popExitAnim="@anim/slide_out_right" />
    </fragment>

    <!-- Paso 2: Cambiar contrase침a -->
    <fragment
        android:id="@+id/cambiarPasswordFragment"
        android:name="com.example.bibliotecaapp.cambiarpassword.CambiarPasswordFragment"
        android:label="Cambiar contrase침a"
        tools:layout="@layout/fragment_cambiar_password" />

</navigation>



