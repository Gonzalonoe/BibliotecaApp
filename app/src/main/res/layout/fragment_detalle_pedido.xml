<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackgroundDark"
    android:padding="20dp"
    tools:context=".ui.pedidos.DetallePedidoFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardDetallePedido"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/colorCard"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvTituloLibro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ“– El Hobbit"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                android:textSize="18sp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvAutorLibro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="âœï¸ Autor"
                android:textColor="@color/colorTextSecondary"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvTituloLibro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvAnioLibro"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ“… 1937"
                android:textColor="@color/colorTextSecondary"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvAutorLibro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <View
                android:id="@+id/divisor1"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorTextMuted"
                app:layout_constraintTop_toBottomOf="@id/tvAnioLibro"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="10dp" />

            <!-- ðŸ‘¤ Datos del usuario -->
            <TextView
                android:id="@+id/tvNombreUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ‘¤ Admin"
                android:textColor="@color/colorTextPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/divisor1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvEmailUsuario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ“§ admin@demo.com"
                android:textColor="@color/colorTextSecondary"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvNombreUsuario"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <View
                android:id="@+id/divisor2"
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:background="@color/colorTextMuted"
                app:layout_constraintTop_toBottomOf="@id/tvEmailUsuario"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginVertical="10dp" />

            <!-- ðŸ“¦ Datos del pedido -->
            <TextView
                android:id="@+id/tvEstadoPedido"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ“¦ Estado: Pendiente"
                android:textColor="@color/colorPrimary"
                android:textStyle="bold"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/divisor2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <TextView
                android:id="@+id/tvFechaPedido"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ“† Pedido: 09/11/2025"
                android:textColor="@color/colorTextSecondary"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvEstadoPedido"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvFechaVencimiento"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="â³ Vence: 16/11/2025"
                android:textColor="@color/colorTextSecondary"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvFechaPedido"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvObservaciones"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Pendiente de entrega"
                android:textColor="@color/colorTextSecondary"
                android:textSize="15sp"
                app:layout_constraintTop_toBottomOf="@id/tvFechaVencimiento"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnPendiente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ”„ Pendiente"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#FFA000"
        android:textColor="@android:color/white"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardDetallePedido"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnPrestado"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintWidth_percent="0.48" />

    <Button
        android:id="@+id/btnPrestado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“˜ Prestado"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#2196F3"
        android:textColor="@android:color/white"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/cardDetallePedido"
        app:layout_constraintStart_toEndOf="@id/btnPendiente"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="20dp"
        app:layout_constraintWidth_percent="0.48" />

    <Button
        android:id="@+id/btnDevuelto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“¦ Devuelto"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#009688"
        android:textColor="@android:color/white"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnPendiente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btnCancelado"
        app:layout_constraintHorizontal_chainStyle="spread"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintWidth_percent="0.48" />

    <Button
        android:id="@+id/btnCancelado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="âŒ Cancelado"
        android:textAllCaps="false"
        android:textSize="16sp"
        android:backgroundTint="#B71C1C"
        android:textColor="@android:color/white"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnPrestado"
        app:layout_constraintStart_toEndOf="@id/btnDevuelto"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintWidth_percent="0.48" />


</androidx.constraintlayout.widget.ConstraintLayout>
