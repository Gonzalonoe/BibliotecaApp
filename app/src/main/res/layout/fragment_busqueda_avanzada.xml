<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/colorBackgroundDark"
    tools:context=".ui.libros.BusquedaAvanzadaFragment">

    <!-- 游댌 Campos de b칰squeda -->
    <EditText
        android:id="@+id/etTituloFiltro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="T칤tulo"
        android:textColor="@color/colorTextLight"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <EditText
        android:id="@+id/etAutorFiltro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Autor"
        android:textColor="@color/colorTextLight"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/etTituloFiltro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etAnioFiltro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="A침o"
        android:inputType="number"
        android:textColor="@color/colorTextLight"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/etAutorFiltro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etStockFiltro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Stock"
        android:inputType="number"
        android:textColor="@color/colorTextLight"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/etAnioFiltro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <EditText
        android:id="@+id/etDescripcionFiltro"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Palabras clave (fantas칤a, aventura...)"
        android:textColor="@color/colorTextLight"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/etStockFiltro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp" />

    <!-- 游댍 Bot칩n Buscar -->
    <Button
        android:id="@+id/btnBuscarAvanzado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="游댌 Buscar"
        android:textColor="@color/colorTextLight"
        android:backgroundTint="@color/colorPrimaryDark"
        app:layout_constraintTop_toBottomOf="@id/etDescripcionFiltro"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp" />

    <!-- 游늯 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvResultadosBusqueda"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/btnBuscarAvanzado"
        app:layout_constraintBottom_toTopOf="@id/btnAnterior"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        tools:listitem="@layout/item_libro" />

    <!-- 拘勇俱뫮잺 Controles de paginaci칩n -->
    <Button
        android:id="@+id/btnAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="拘勇 Anterior"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorTextLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/tvPagina"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="P치gina 1/1"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btnAnterior"
        app:layout_constraintEnd_toStartOf="@id/btnSiguiente"
        app:layout_constraintHorizontal_chainStyle="packed"
        android:layout_marginHorizontal="12dp" />

    <Button
        android:id="@+id/btnSiguiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Siguiente 俱뫮잺"
        android:backgroundTint="@color/colorPrimaryDark"
        android:textColor="@color/colorTextLight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

