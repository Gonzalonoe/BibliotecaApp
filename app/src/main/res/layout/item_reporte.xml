<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="14dp"
    app:cardElevation="6dp"
    app:cardUseCompatPadding="true"
    android:backgroundTint="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <!-- Imagen del reporte -->
        <ImageView
            android:id="@+id/ivPortadaReporte"
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_marginEnd="12dp"
            android:contentDescription="Portada del reporte" />

        <!-- Texto -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTituloReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Título del reporte"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end" />

            <TextView
                android:id="@+id/tvSinopsisReporte"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sinopsis o descripción del reporte"
                android:textColor="@color/black"
                android:textSize="14sp"
                android:maxLines="3"
                android:ellipsize="end"
                android:layout_marginTop="4dp" />

            <TextView
                android:id="@+id/tvUsuarioReporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Por: Usuario"
                android:textColor="@color/black"
                android:textStyle="italic"
                android:textSize="13sp"
                android:layout_marginTop="6dp" />

            <TextView
                android:id="@+id/tvFechaReporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha: --/--/----"
                android:textColor="@color/black"
                android:textSize="13sp"
                android:layout_marginTop="2dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
