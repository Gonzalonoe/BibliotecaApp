<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#1E1A16">

    <ImageView
        android:id="@+id/ivPortadaReporte"
        android:layout_width="180dp"
        android:layout_height="260dp"
        android:scaleType="centerCrop"
        android:background="@drawable/bkg_imagen_marco"
        android:padding="6dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvTituloReporte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TÃ­tulo del libro"
        android:textColor="#FFE9B5"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/ivPortadaReporte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvSinopsisReporte"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Sinopsis del libro..."
        android:textColor="#D7C6A3"
        android:textSize="15sp"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@id/tvTituloReporte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardUsuario"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#3B3024"
        app:cardCornerRadius="10dp"
        app:cardElevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/tvSinopsisReporte"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/tvUsuarioReporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Usuario: gonza"
                android:textColor="#FFE9B5"
                android:textSize="15sp"/>

            <TextView
                android:id="@+id/tvEmailReporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Email:"
                android:textColor="#FFE9B5"
                android:textSize="15sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvFechaReporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fecha:"
                android:textColor="#FFE9B5"
                android:textSize="15sp"
                android:layout_marginTop="4dp"/>

            <TextView
                android:id="@+id/tvEstadoReporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:textColor="#D38A1B"
                android:textStyle="bold"

                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="6dp"
                android:paddingBottom="6dp"

                android:background="@drawable/bkg_chip_estado"
                android:layout_marginTop="10dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/btnAceptar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ACEPTAR REPORTE"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_green_modern"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardUsuario"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="CANCELAR REPORTE"
        android:textAllCaps="false"
        android:textColor="#FFFFFF"
        android:background="@drawable/btn_red_modern"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnAceptar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <Button
        android:id="@+id/btnEnviarEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ENVIAR EMAIL AL USUARIO"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:background="@drawable/btn_mostaza"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@id/btnCancelar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
