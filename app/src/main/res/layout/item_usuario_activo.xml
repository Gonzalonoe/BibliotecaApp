<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp"
    android:backgroundTint="#2F2A25">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="18dp">

        <TextView
            android:id="@+id/tvNombreUsuarioActivo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nombre del Usuario"
            android:textStyle="bold"
            android:textSize="19sp"
            android:textColor="#FFE9B5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvEmailUsuarioActivo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="correo@usuario.com"
            android:textSize="14sp"
            android:textColor="#D6C7A4"
            android:paddingTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/tvNombreUsuarioActivo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvRolUsuarioActivo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Rol: Lector"
            android:textSize="14sp"
            android:textColor="#C8B697"
            android:paddingTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/tvEmailUsuarioActivo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <Button
            android:id="@+id/btnDarDeBaja"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:text="Dar de baja"
            android:textColor="#FFFFFF"
            android:backgroundTint="#9E3B3B"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvRolUsuarioActivo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>

